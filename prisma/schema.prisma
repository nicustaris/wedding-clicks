generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("WEDDINGCLICKS_DATABASE_URL")
  directUrl = env("WEDDINGCLICKS_DATABASE_URL_UNPOOLED")
}

model Event {
    id Int @id @default(autoincrement())
    creator String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    sessions SessionRecord[]
}

model Media {
    id Int @id @default(autoincrement())
    sessionId Int
    imageUrl String
    mediaType String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    sessionRecord SessionRecord @relation(fields: [sessionId], references: [id])
}

model SessionRecord {
  id Int @id @default(autoincrement())
  name String
  message String
  eventId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id])
  media Media[]
}