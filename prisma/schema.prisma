generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("WEDDINGCLICKS_DATABASE_URL")
  directUrl = env("WEDDINGCLICKS_DATABASE_URL_UNPOOLED")
}

model Event {
    id Int @id @default(autoincrement())
    creator String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    photos Photo[]
}

model Photo {
    id Int @id @default(autoincrement())
    eventId Int
    name String
    imageUrl String
    message String?
    createdAt DateTime @default(now())

    event Event @relation(fields: [eventId], references: [id])
}